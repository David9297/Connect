<html>
    <head>
        <title>The Data</title>
        <link href="style.css" type="text/css" rel="stylesheet"/>
    </head>
    <body>
        <div class="logo">
			<a href="index.html"><img src="Images/DigiCard Logo.png" alt="DigiCard Logo" title="DigiCard" width="350" height="350" align="center"/></a>
		</div>

		<hr/>
        <br/>
        
        <h1>Here is the output!</h1>
        
        <% 
            if (data.length > 0) {
                for (var i = 0; i < data.length; i++) { 
        %> 
                    <div id="dataout<%= i %>" style="color: <%= data[i].color %>"><a href="/displayrecord?_id=<%= data[i]._id %>"><%= data[i].text %></a></div>
        <% 
                } 
            }
        %>

        <form method="POST" action="/formdata">
            <label for="data">Enter Text to Post:</label>
            <input type="text" name="data" value="Enter Text">
            <input type="color" name="color">
            <input type="submit" name="submit" value="Submit">
        </form>
    </body>
</html>